<h1>Searching for - <%= @search_term %></h1>
<center>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even','odd') %>>
      <td><%= link_to(image_tag(recipe["image_url"], :size => "100x100"), recipe["source_url"]) %></td>
      <td><%= link_to(ActionController::Base.helpers.sanitize(recipe["title"]), recipe["source_url"]) %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
</center>
